{
  "name": "@wai/adapters",
  "version": "1.0.0",
  "description": "WAI SDK Adapters - Framework integrations (Express, PostgreSQL, etc.)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./express": {
      "import": "./dist/express/index.mjs",
      "require": "./dist/express/index.js",
      "types": "./dist/express/index.d.ts"
    },
    "./postgresql": {
      "import": "./dist/postgresql/index.mjs",
      "require": "./dist/postgresql/index.js",
      "types": "./dist/postgresql/index.d.ts"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsup src/index.ts src/express/index.ts src/postgresql/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/express/index.ts src/postgresql/index.ts --format cjs,esm --dts --watch"
  },
  "dependencies": {
    "@wai/core": "workspace:*"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "pg": "^8.11.0",
    "drizzle-orm": "^0.30.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "drizzle-orm": {
      "optional": true
    }
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.7.2"
  },
  "license": "MIT"
}
