# WAI SDK Platform - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/wai_sdk
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=wai_sdk

# ===========================================
# CORE AI PROVIDERS (Required - at least one)
# ===========================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=...
GOOGLE_API_KEY=...

# ===========================================
# ADDITIONAL AI PROVIDERS (Recommended)
# ===========================================
GROQ_API_KEY=gsk_...
DEEPSEEK_API_KEY=...
TOGETHER_API_KEY=...
PERPLEXITY_API_KEY=pplx-...
COHERE_API_KEY=...
XAI_API_KEY=...
REPLICATE_API_KEY=r8_...
AI21_API_KEY=...
MOONSHOT_API_KEY=...

# ===========================================
# VOICE & VISION
# ===========================================
ELEVENLABS_API_KEY=...

# ===========================================
# INDIA-SPECIFIC (Optional)
# ===========================================
SARVAM_API_KEY=...
KIE_AI_API_KEY=...

# ===========================================
# SECURITY & AUTH
# ===========================================
SESSION_SECRET=your-secure-session-secret-min-32-chars
JWT_SECRET=your-secure-jwt-secret-min-32-chars
EMAIL_ENCRYPTION_KEY=your-32-char-encryption-key

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=...

# ===========================================
# CACHE (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# SERVER
# ===========================================
NODE_ENV=development
PORT=5000
