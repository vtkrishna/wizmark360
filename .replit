modules = ["nodejs-18", "web", "bash", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_openai:1.0.0", "javascript_anthropic:1.0.0", "javascript_gemini:1.0.0", "javascript_log_in_with_replit:2.0.0"]

[nix]
channel = "stable-25_05"
packages = ["chromium", "pandoc", "texliveFull"]

[userenv]

[userenv.shared]
NODE_ENV = "development"
PORT = "5000"
JWT_SECRET = "replit-wai-sdk-jwt-secret-generated-min-32-characters-secure-key"
EMAIL_ENCRYPTION_KEY = "replit-wai-sdk-encryption-key32"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start"]
build = ["npm", "run", "build"]
